namespace pingpong;

struct PingRequest
{
    0: string name;
}

struct PingReply
{
    0: string message;
}

service DoublePing
{
    PingReply Ping(PingRequest);

    PingReply PingNoPayload();

    nothing PingNoResponse(PingRequest);

    void PingVoid();

    PingReply PingShouldThrow(PingRequest);
}

service PingPong<RequestType>
{
    PingReply Ping(RequestType);
}
